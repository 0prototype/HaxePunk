<project name="HaxePunk" default="flash" basedir=".">
	<description>Builds the haxepunk project</description>

	<property file="ant.properties" />
	<property name="final.dir" location="build"/>

	<!-- build the swf file -->
	<target name="flash">
		<delete file="${bin.dir}/game.swf" />
		<exec executable="haxe" dir=".">
			<arg line="-swf9 ${bin.dir}/game.swf" />
			<arg line="-swf-version 10" />
			<arg line="-cp ${src.dir}" />
			<arg line="-main ${app.class}" />
			<arg line="-swf-header ${app.width}:${app.height}:30:333333" />
			<arg line="-swf-lib ${swf.assets}.swf" />
			<arg line="-D samhaxe" />
		</exec>
	</target>

	<target name="tools">
		<exec executable="haxe" dir="tools">
			<arg line="-main SetupTool" />
			<arg line="-neko ../run.n" />
		</exec>
	</target>

	<target name="haxelib" depends="tools">
		<zip destfile="haxepunk.zip">
			<zipfileset dir="" prefix="haxepunk" includes="run.n" />
			<zipfileset dir="src" prefix="haxepunk" />
			<zipfileset dir="tools" prefix="haxepunk/tools" />
			<zipfileset dir="template" prefix="haxepunk/template" />
		</zip>
	</target>

	<target name="test" depends="haxelib">
		<exec executable="haxelib" dir=".">
			<arg line="test haxepunk.zip" />
		</exec>
		<exec executable="haxelib" dir="bin">
			<arg line="run HaxePunk new" />
		</exec>
	</target>

	<target name="android">
		<exec executable="nme" dir=".">
			<arg line="test build.nmml" />
			<arg line="android" />
		</exec>
	</target>

</project>